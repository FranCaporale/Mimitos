<script>
  document.addEventListener('DOMContentLoaded', function() {
    const buscador = document.getElementById('buscador');
    const productos = document.querySelectorAll('.product-card');
    const mensajeSinResultados = document.getElementById('mensajeSinResultados');

    if (!buscador || !mensajeSinResultados) {
      console.error('No se encontraron los elementos del buscador');
      return;
    }

    function filtrarProductos() {
      const texto = buscador.value.toLowerCase().trim();
      let encontrados = 0
      console.log('Buscando:', texto); // Para debugging

      productos.forEach(producto => {
        const nombreElement = producto.querySelector('h3.product-name');
        if (!nombreElement) {
          console.error('No se encontró el elemento del nombre del producto');
          return;
        }

        const nombre = nombreElement.textContent.toLowerCase();
        const coincide = nombre.includes(texto);


        console.log('Nombre del producto:', nombre); // Para debugging

        producto.style.display = nombre.includes(texto) ? 'block' : 'none';
        if (coincide) encontrados++;

      });
      if (encontrados === 0) {
        mensajeSinResultados.style.display = 'block';
      } else {
        mensajeSinResultados.style.display = 'none';
      }
    }

  
    
    buscador.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        filtrarProductos();
      }
    });
  });
</script>


